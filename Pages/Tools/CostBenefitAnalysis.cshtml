@page
@model CostBenefitAnalysisModel
@{
    ViewData["Title"] = "Cost Benefit Analysis";
}

<!-- TODO Cite the webiste using a citation element. -->
<p>Adapted from <a href="http://www.comh.ca/antidepressant-skills/work/workbook/pages/worksheets-01.cfm">Antidepressant Skills @@ Work.</a></p>

<form>
    <form-group-textarea label="The problem:" placeholder="The problem is... "/>
    @for(var i = 1; i <= 3; ++i) {
        <fieldset>
            <legend><small>Option @i:</small></legend>
            <div class="form-row">
                <div class="col">
                    <form-group-textarea placeholder="Action" />
                </div>
                <div class="col">
                    <form-group-textarea placeholder="Advantages" />
                </div>
                <div class="col">
                    <form-group-textarea placeholder="Disadvantages" />
                </div>
            </div>
        </fieldset>
    }
    <button type="submit" class="btn btn-primary" disabled>Download as Pdf (Coming Soon)</button>
</form>